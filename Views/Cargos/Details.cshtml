@model ClockInTimeWeb.Data.Cargo

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Cargo</h1>

<div>
    <h4>Aqui, você encontra os detalhes do registro do cargo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Cargo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCargo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Departamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Departamento)
        </dd>
        <dt class = "col-sm-2">
            Carga Horária
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CargaHoraria)
        </dd>
        <dt class="col-sm-2">
            Salário
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Administrador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Administrador)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdCargo">Editar</a> |
    <a asp-action="Index">Voltar à Listagem</a>
</div>
