@model IEnumerable<ClockInTimeWeb.Data.Cargo>

@{
    ViewData["Title"] = "Cargos";
}

<h1>Cargos</h1>
<h4>Aqui, você pode visualizar, editar e criar novos cargos para funcionários!</h4>

<p>
    <a asp-action="Create">Criar Cargo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nome do Cargo
            </th>
            <th class="small__screen__hidden">
                Departamento
            </th>
            <th class="small__screen__hidden">
                Carga Horária
            </th>
            <th class="small__screen__hidden">
                Salário
            </th>
            <th class="small__screen__hidden">
                Administrador
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCargo)
            </td>
            <td class="small__screen__hidden">
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td class="small__screen__hidden">
                @Html.DisplayFor(modelItem => item.CargaHoraria)
            </td>
            <td class="small__screen__hidden">
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td class="small__screen__hidden">
                @Html.DisplayFor(modelItem => item.Administrador)
            </td>
            <td>
                <a asp-action="Edit" class="text-decoration-none" asp-route-id="@item.IdCargo">Editar</a> |
                <a asp-action="Details" class="text-decoration-none" asp-route-id="@item.IdCargo">Detalhes</a> |
                <a asp-action="Delete" class="text-danger text-decoration-none" asp-route-id="@item.IdCargo">DELETAR</a>
            </td>
        </tr>
}
    </tbody>
</table>
