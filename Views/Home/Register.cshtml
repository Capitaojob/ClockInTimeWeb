@{
    ViewData["Title"] = "Register";
    ViewData["StyleSheet"] = "register.css";
}

<div class="register__page">
    <div class="formulario__resgister">
        <h1>Cadastro</h1>
        <h4 class="text-muted">Faça o Cadastro do Funcionário</h4>
        <form>
            <input type="text" id="nome" name="nome" placeholder="Nome" required />
            <input type="text" id="cpf" name="cpf" placeholder="CPF" required />
            <input type="text" id="telefone" name="telefone" placeholder="Telefone" required />
            <input type="text" id="estado" name="estado" placeholder="Estado" required />
            <input type="text" id="cidade" name="cidade" placeholder="Cidade" required />
            <input type="text" id="logradouro" name="logradouro" placeholder="Logradouro" required />
            <input type="number" id="numero-residencia" name="numero-residencia" placeholder="Número da Residência" required />
            <input type="text" id="funcao" name="funcao" placeholder="Função do funcionário" required />
            <input type="number" id="salario" name="salario" placeholder="Base salarial" required />
            <input type="email" id="email" name="email" placeholder="E-mail" required />
            <button type="submit">Cadastrar</button>
        </form>
    </div>
</div>