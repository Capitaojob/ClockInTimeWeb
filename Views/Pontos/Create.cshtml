@model ClockInTimeWeb.Data.Ponto

@{
    ViewData["Title"] = "Registrar Ponto";
}

<h1>Registrar Ponto</h1>

<h4>Aqui, você pode criar novos pontos para os funcionários, caso tenha que fazer ajustes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdFuncionario" class="control-label">ID do Funcionário</label>
                <input asp-for="IdFuncionario" class="form-control" />
                <span asp-validation-for="IdFuncionario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label">Data</label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Entrada" class="control-label">Entrada do Dia</label>
                <input asp-for="Entrada" class="form-control" />
                <span asp-validation-for="Entrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaidaAl" class="control-label">Saída Almoço</label>
                <input asp-for="SaidaAl" class="form-control" />
                <span asp-validation-for="SaidaAl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntradaAl" class="control-label">Volta do Almoço</label>
                <input asp-for="EntradaAl" class="form-control" />
                <span asp-validation-for="EntradaAl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Saida" class="control-label">Saída do Dia</label>
                <input asp-for="Saida" class="form-control" />
                <span asp-validation-for="Saida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Registro" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Listagem</a>
</div>

