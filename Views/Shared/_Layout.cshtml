<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ClockInTime</title>
    @if (ViewData["Stylesheet"] != null)
    {
        <link rel="stylesheet" href="~/css/@ViewData["Stylesheet"]" />
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ClockInTimeWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid flex align-content-center justify-content-around">
                @if (!Context.Request.Path.StartsWithSegments("/Auth"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ClockInTime</a>
                }
                @if (Context.Request.Path.StartsWithSegments("/Auth"))
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Auth" asp-action="Index">ClockInTime</a>
                }
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" id="navbar-link-itens">
                        @if (!Context.Request.Path.StartsWithSegments("/Auth"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ClockIn">Bater Ponto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Report">Relatório</a>
                            </li>
                        }
                    </ul>
                </div>
                @if (!Context.Request.Path.StartsWithSegments("/Auth"))
                {
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                     @* <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="UserProfile">
                         <img src="/images/profile.png" class="profile" alt="Perfil" title="Perfil" />
                     </a> *@
                    <button type="button" class="btn btn-logout btn-secondary">Sair</button>
                </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 d-flex flex-column h-100 position-relative justify-content-center align-content-center">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted mt-5">
        <div class="container">
            <div class="row flex flex-row">
                <!-- Bloco 1 -->
                <div class="col-md-4">
                    <h5>Termos e Privacidade</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" asp-area="" asp-controller="Legal" asp-action="Privacy">Privacidade</a></li>
                        <li><a class="text-muted" asp-area="" asp-controller="Legal" asp-action="Terms">Termos de Serviço</a></li>
                    </ul>
                </div>

                <!-- Bloco 2 -->
                <div class="col-md-4">
                    <h5>Redes Sociais</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="https://facebook.com">Facebook</a></li>
                        <li><a class="text-muted" href="https://x.com">Twitter</a></li>
                        <li><a class="text-muted" href="https://instagram.com">Instagram</a></li>
                    </ul>
                </div>

                <!-- Bloco 3 -->
                <div class="col-md-4">
                    <h5>Contato</h5>
                    <ul class="list-unstyled text-small">
                        <li><a class="text-muted" href="mailto:joaopedroangottibataglia@gmail.com">Email</a></li>
                        <li><a class="text-muted" href="https://wa.me/5516993572303">Whatsapp</a></li>
                        <li><a class="text-muted" href="https://wa.me/5516993572303">Telefone: +55 16 99357-2303</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
